                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.iff.pooa20171.birthdaypartymanager.activity.CadastroFestaActivity" />
        </activity>
        <activity
            android:name=".activity.ItemActivity"
            android:label="@string/title_activity_item"
            android:parentActivityName=".activity.InicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.iff.pooa20171.birthdaypartymanager.activity.InicialActivity" />
        </activity>
