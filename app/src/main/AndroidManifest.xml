            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.iff.pooa20171.birthdaypartymanager.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.InicialActivity"
            android:label="@string/title_activity_inicial"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CadastroFestaActivity"
            android:label="@string/title_activity_cadastro_festa"
            android:parentActivityName=".activity.InicialActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.edu.iff.pooa20171.birthdaypartymanager.activity.InicialActivity" />
        </activity>
        <activity
            android:name=".activity.CadastroItemActivity"
            android:label="@string/title_activity_cadastro_item"
            android:parentActivityName=".activity.CadastroFestaActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
